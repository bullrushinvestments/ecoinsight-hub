import type { BuildCommand, EnvironmentVariables, HeaderRule } from './types'; // Assuming custom types are defined in a separate file

interface CacheControlPolicy {
  pattern: string;
  headers: Array<{ key: string; value: string }>;
}

interface DeployConfig {
  build: BuildCommand;
  env: EnvironmentVariables;
  redirects?: Array<{
    source: string;
    destination: string;
    statusCode: number;
  }>;
  headers?: Array<HeaderRule>;
  cacheControl?: CacheControlPolicy[];
  frameworkSettings?: {
    vercel?: Record<string, any>;
    netlify?: Record<string, any>;
  };
}

interface BuildCommand {
  command: string;
  output: string;
}

interface EnvironmentVariables extends Record<string, string> {}

interface HeaderRule {
  source: string;
  headers: Array<{ key: string; value: string }>;
}

export const deployConfig: DeployConfig = {
  build: {
    command: 'next build',
    output: '.next'
  },
  env: {
    NEXT_PUBLIC_API_URL: process.env.NEXT_PUBLIC_API_URL,
    DATABASE_URI: process.env.DATABASE_URI
  },
  redirects: [
    {
      source: '/old-url',
      destination: '/new-url',
      statusCode: 301
    }
  ],
  headers: [
    {
      source: '/api/*',
      headers: [
        { key: 'Access-Control-Allow-Credentials', value: 'true' },
        { key: 'Access-Control-Allow-Origin', value: '*' },
        { key: 'Vary', value: 'Origin' }
      ]
    }
  ],
  cacheControl: [
    {
      pattern: '/api/*',
      headers: [
        { key: 'Cache-Control', value: 's-maxage=1, stale-while-revalidate' }
      ]
    },
    {
      pattern: '/static/*',
      headers: [
        { key: 'Cache-Control', value: 'max-age=31536000, immutable' }
      ]
    }
  ],
  frameworkSettings: {
    vercel: {
      buildCommand: 'next build',
      startCommand: 'next start'
    },
    netlify: {
      functions: './functions',
      redirects: '_redirects'
    }
  }
};

